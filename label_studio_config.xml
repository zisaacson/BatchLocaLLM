<View>
  <Style>
    .profile-header {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      padding: 20px;
      border-radius: 8px 8px 0 0;
      color: white;
      margin-bottom: 20px;
    }
    .profile-name {
      font-size: 24px;
      font-weight: 600;
      margin-bottom: 5px;
    }
    .profile-role {
      font-size: 16px;
      opacity: 0.9;
    }
    .section {
      background: #f8f9fa;
      padding: 15px;
      margin-bottom: 15px;
      border-radius: 8px;
    }
    .section-title {
      font-size: 14px;
      font-weight: 700;
      color: #0073b1;
      text-transform: uppercase;
      margin-bottom: 10px;
      letter-spacing: 0.5px;
    }
    .item {
      padding: 8px 0;
      border-bottom: 1px solid #e0e0e0;
    }
    .item:last-child {
      border-bottom: none;
    }
    .llm-section {
      background: #fff3cd;
      padding: 15px;
      margin: 20px 0;
      border-radius: 8px;
      border-left: 4px solid #ffc107;
    }
    .llm-title {
      font-size: 16px;
      font-weight: 600;
      margin-bottom: 10px;
      color: #856404;
    }
    .llm-recommendation {
      display: inline-block;
      padding: 6px 12px;
      background: #0073b1;
      color: white;
      border-radius: 16px;
      font-weight: 600;
      margin-bottom: 10px;
    }
    .llm-detail {
      margin: 8px 0;
      font-size: 14px;
    }
    .rubric-panel {
      background: #fff3cd;
      border: 2px solid #ffc107;
      border-radius: 8px;
      padding: 15px;
      margin-bottom: 20px;
      max-height: 400px;
      overflow-y: auto;
    }
    .rubric-title {
      color: #856404;
      font-size: 16px;
      font-weight: 700;
      margin-bottom: 15px;
    }
    .rubric-section {
      margin-bottom: 15px;
      padding-bottom: 10px;
      border-bottom: 1px solid #ffc107;
    }
    .rubric-section:last-child {
      border-bottom: none;
    }
    .rubric-header {
      font-size: 13px;
      font-weight: 600;
      color: #333;
      margin-bottom: 5px;
    }
    .rubric-text {
      font-size: 11px;
      color: #555;
      line-height: 1.5;
      white-space: pre-wrap;
    }
  </Style>

  <!-- Evaluation Rubrics Panel -->
  <View className="rubric-panel">
    <Header value="ðŸ“‹ Evaluation Rubrics (Editable)" className="rubric-title"/>

    <View className="rubric-section">
      <Header value="ðŸŽ“ Educational Pedigree" className="rubric-header"/>
      <TextArea name="rubric_edu" toName="name" value="â€¢ Bachelor's degree is strongest signal&#10;â€¢ Selectivity/prestige of undergrad weighted most&#10;â€¢ Top-tier CS/Eng bachelor's = Great&#10;â€¢ Mid-tier bachelor's = Average/Weak&#10;â€¢ Graduate degrees add value only if top school&#10;â€¢ Top-tier MS in CS/Eng = Good/Great&#10;â€¢ Mid-tier MS not strong signal&#10;â€¢ PhD in CS/Eng = Good, top-tier = Great/Excellent&#10;â€¢ Technical majors favored" className="rubric-text" rows="9" editable="true"/>
    </View>

    <View className="rubric-section">
      <Header value="ðŸ¢ Company Pedigree" className="rubric-header"/>
      <TextArea name="rubric_company" toName="name" value="â€¢ Brand and caliber of employers&#10;â€¢ Tier-1 tech companies&#10;â€¢ High-growth startups&#10;â€¢ Selective teams&#10;â€¢ Notable acquisitions" className="rubric-text" rows="5" editable="true"/>
    </View>

    <View className="rubric-section">
      <Header value="ðŸ“ˆ Trajectory" className="rubric-header"/>
      <TextArea name="rubric_trajectory" toName="name" value="â€¢ Speed/consistency of promotions vs years&#10;â€¢ >8 years â†’ should be â‰¥ Senior SWE&#10;â€¢ >12 years â†’ should be â‰¥ Staff SWE&#10;â€¢ Faster = stronger, slower = weaker" className="rubric-text" rows="4" editable="true"/>
    </View>

    <View className="rubric-section">
      <Header value="ðŸ’» Is Software Engineer" className="rubric-header"/>
      <TextArea name="rubric_swe" toName="name" value="â€¢ Confirm titles are SWE&#10;â€¢ Confirm responsibilities are SWE" className="rubric-text" rows="2" editable="true"/>
    </View>
  </View>

  <!-- Candidate Profile Display -->
  <View className="profile-header">
    <Text name="name" value="$name" className="profile-name"/>
    <Text name="role" value="$role" className="profile-role"/>
    <Text name="location" value="ðŸ“ $location"/>
  </View>

  <!-- Education Section -->
  <View className="section">
    <Header value="ðŸŽ“ Education" className="section-title"/>
    <List name="education" value="$education" className="item"/>
  </View>

  <!-- Experience Section -->
  <View className="section">
    <Header value="ðŸ’¼ Experience (Top 5)" className="section-title"/>
    <List name="work_history" value="$work_history" className="item"/>
  </View>

  <!-- Input Prompt (What Questions Were Asked) -->
  <View className="section">
    <Header value="ðŸ“‹ Evaluation Questions (Sent to LLM)" className="section-title"/>
    <Text name="input_prompt" value="$input_prompt" style="white-space: pre-wrap; font-size: 12px; color: #555;"/>
  </View>

  <!-- LLM Evaluation -->
  <View className="llm-section">
    <Header value="ðŸ¤– LLM Evaluation (Qwen 3 4B)" className="llm-title"/>
    <View>
      <Text name="llm_rec" value="$llm_recommendation" className="llm-recommendation"/>
    </View>
    <Text name="llm_reasoning" value="$llm_reasoning" style="margin-bottom: 15px;"/>

    <View className="llm-detail">
      <Text name="llm_edu" value="Educational Pedigree: $llm_educational_pedigree" style="font-weight: 600;"/>
      <Text name="llm_edu_reasoning" value="$llm_educational_pedigree_reasoning" style="margin-left: 20px; font-size: 13px; color: #555;"/>
    </View>

    <View className="llm-detail">
      <Text name="llm_company" value="Company Pedigree: $llm_company_pedigree" style="font-weight: 600;"/>
      <Text name="llm_company_reasoning" value="$llm_company_pedigree_reasoning" style="margin-left: 20px; font-size: 13px; color: #555;"/>
    </View>

    <View className="llm-detail">
      <Text name="llm_traj" value="Trajectory: $llm_trajectory" style="font-weight: 600;"/>
      <Text name="llm_traj_reasoning" value="$llm_trajectory_reasoning" style="margin-left: 20px; font-size: 13px; color: #555;"/>
    </View>

    <View className="llm-detail">
      <Text name="llm_swe" value="Is Software Engineer: $llm_is_swe" style="font-weight: 600;"/>
      <Text name="llm_swe_reasoning" value="$llm_is_swe_reasoning" style="margin-left: 20px; font-size: 13px; color: #555;"/>
    </View>
  </View>

  <Header value="â­ Your Evaluation"/>

  <!-- Recommendation -->
  <Header value="Overall Recommendation"/>
  <Choices name="recommendation" toName="name" choice="single" required="true">
    <Choice value="Strong Yes" style="background-color: #28a745"/>
    <Choice value="Yes" style="background-color: #90ee90"/>
    <Choice value="Maybe" style="background-color: #ffc107"/>
    <Choice value="No" style="background-color: #ff6b6b"/>
    <Choice value="Strong No" style="background-color: #dc3545"/>
  </Choices>

  <!-- Educational Pedigree -->
  <Header value="Educational Pedigree"/>
  <Choices name="educational_pedigree" toName="name" choice="single" required="true">
    <Choice value="Exceptional"/>
    <Choice value="Strong"/>
    <Choice value="Good"/>
    <Choice value="Average"/>
    <Choice value="Weak"/>
  </Choices>

  <!-- Company Pedigree -->
  <Header value="Company Pedigree"/>
  <Choices name="company_pedigree" toName="name" choice="single" required="true">
    <Choice value="Exceptional"/>
    <Choice value="Strong"/>
    <Choice value="Good"/>
    <Choice value="Average"/>
    <Choice value="Weak"/>
  </Choices>

  <!-- Trajectory -->
  <Header value="Career Trajectory"/>
  <Choices name="trajectory" toName="name" choice="single" required="true">
    <Choice value="Exceptional"/>
    <Choice value="Strong"/>
    <Choice value="Good"/>
    <Choice value="Average"/>
    <Choice value="Weak"/>
  </Choices>

  <!-- Is Software Engineer -->
  <Header value="Is Software Engineer?"/>
  <Choices name="is_software_engineer" toName="name" choice="single" required="true">
    <Choice value="Yes"/>
    <Choice value="No"/>
  </Choices>

  <!-- Notes -->
  <Header value="Notes (Optional)"/>
  <TextArea name="notes" toName="name" placeholder="Any additional observations..." rows="3"/>

</View>

